#include <dt-bindings/zmk/matrix_transform.h>
#include "keyball61_layouts.dtsi"

&physical_layout0 {
    transform = <&default_transform>; // Label of the matrix transform this layout uses
};

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,physical-layout = &physical_layout0;
    };

    default_transform: matrix_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <14>;
        rows = <10>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(5,3) RC(5,4) RC(5,5)                      RC(0,11) RC(0,10) RC(0,9) RC(0,8) RC(0,7) RC(0,6)
            RC(1,0) RC(1,1) RC(1,2) RC(6,3) RC(6,4) RC(6,5)                      RC(1,11) RC(1,10) RC(1,9) RC(1,8) RC(1,7) RC(1,6)
            RC(2,0) RC(2,1) RC(2,2) RC(7,3) RC(7,4) RC(7,5)                      RC(2,11) RC(2,10) RC(2,9) RC(2,8) RC(2,7) RC(2,6)
            RC(3,0) RC(3,1) RC(3,2) RC(8,3) RC(8,4) RC(8,5) RC(8,6)     RC(8,12) RC(3,11) RC(3,10) RC(3,9) RC(3,8) RC(3,7) RC(3,6)
            RC(4,0) RC(4,1) RC(4,2) RC(9,3) RC(9,4) RC(9,5) RC(9,6)     RC(9,12) RC(4,11)                          RC(4,7) RC(4,6)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        wakeup-source;

        row-gpios
            = <&pro_micro 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
    };
};