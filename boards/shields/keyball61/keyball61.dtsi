#include <dt-bindings/zmk/matrix_transform.h>
#include "keyball61_layouts.dtsi"

&physical_layout0 {
    transform = <&default_transform>; // Label of the matrix transform this layout uses
};

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,physical-layout = &physical_layout0;
    };

    default_transform: matrix_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <14>;
        rows = <5>;
        map = <
            RC(6,0) RC(7,0) RC(8,0) RC(0,6) RC(0,7) RC(0,8)                       RC(9,17)  RC(9,16)  RC(9,15)  RC(17,9)  RC(16,9)  RC(15,9)
            RC(6,1) RC(7,1) RC(8,1) RC(1,6) RC(1,7) RC(1,8)                       RC(10,17) RC(10,16) RC(10,15) RC(17,10) RC(16,10) RC(15,10)
            RC(6,2) RC(7,2) RC(8,2) RC(2,6) RC(2,7) RC(2,8)                       RC(11,17) RC(11,16) RC(11,15) RC(17,11) RC(16,11) RC(15,11)
            RC(6,3) RC(7,3) RC(8,3) RC(3,6) RC(3,7) RC(3,8) RC(3,9)     RC(12,18) RC(12,17) RC(12,16) RC(12,15) RC(17,12) RC(16,12) RC(15,12)
            RC(6,4) RC(7,4) RC(8,4) RC(4,6) RC(4,7) RC(4,8) RC(4,9)     RC(13,18) RC(13,17)                               RC(16,13) RC(15,13)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-charlieplex";
        wakeup-source;

        gpios
            = <&pro_micro 4 GPIO_ACTIVE_HIGH>
            , <&pro_micro 5 GPIO_ACTIVE_HIGH>
            , <&pro_micro 6 GPIO_ACTIVE_HIGH>
            , <&pro_micro 7 GPIO_ACTIVE_HIGH>
            , <&pro_micro 8 GPIO_ACTIVE_HIGH>
            , <&pro_micro 21 GPIO_ACTIVE_HIGH>
            , <&pro_micro 20 GPIO_ACTIVE_HIGH>
            , <&pro_micro 19 GPIO_ACTIVE_HIGH>
            , <&pro_micro 18 GPIO_ACTIVE_HIGH>
            ;
    };
};