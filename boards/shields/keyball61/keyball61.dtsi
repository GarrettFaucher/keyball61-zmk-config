#include <dt-bindings/zmk/matrix_transform.h>
#include "keyball61_layouts.dtsi"

&physical_layout0 {
    transform = <&default_transform>; // Label of the matrix transform this layout uses
};

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,physical-layout = &physical_layout0;
    };

    default_transform: matrix_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <14>;
        rows = <5>;
        map = <
            RC(0,6) RC(0,7) RC(0,8) RC(6,0) RC(7,0) RC(8,0)                      RC(5,12) RC(5,11) RC(5,10) RC(0,9) RC(0,8) RC(0,7)
            RC(1,6) RC(1,7) RC(1,8) RC(6,1) RC(7,1) RC(8,1)                      RC(6,12) RC(6,11) RC(6,10) RC(1,9) RC(1,8) RC(1,7)
            RC(2,6) RC(2,7) RC(2,8) RC(6,2) RC(7,2) RC(8,2)                      RC(7,12) RC(7,11) RC(7,10) RC(2,9) RC(2,8) RC(2,7)
            RC(3,6) RC(3,7) RC(3,8) RC(6,3) RC(7,3) RC(8,3) RC(9,3)     RC(8,13) RC(8,12) RC(8,11) RC(8,10) RC(3,9) RC(3,8) RC(3,7)
            RC(4,6) RC(4,7) RC(4,8) RC(6,4) RC(7,4) RC(8,4) RC(9,4)     RC(9,13) RC(9,12)                           RC(4,8) RC(4,7)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-charlieplex";
        diode-direction = "col2row";
        wakeup-source;

        gpios
            = <&pro_micro 4 GPIO_ACTIVE_HIGH>
            , <&pro_micro 5 GPIO_ACTIVE_HIGH>
            , <&pro_micro 6 GPIO_ACTIVE_HIGH>
            , <&pro_micro 7 GPIO_ACTIVE_HIGH>
            , <&pro_micro 8 GPIO_ACTIVE_HIGH>
            , <&pro_micro 21 GPIO_ACTIVE_HIGH>
            , <&pro_micro 20 GPIO_ACTIVE_HIGH>
            , <&pro_micro 19 GPIO_ACTIVE_HIGH>
            , <&pro_micro 18 GPIO_ACTIVE_HIGH>
            ;
    };
};