#include "keyball61_pmw3610.dtsi";

/{
  split_inputs {
    #address-cells = <1>;
    #size-cells = <0>;

    trackball_split: trackball_split@0 { compatible = "zmk,input-split"; reg = <0>; };
  };

  trackball_listener {
    status = "disabled";
    compatible = "zmk,input-listener";
    device = <&trackball_split>;
  };
};